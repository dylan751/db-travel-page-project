{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "store/NotificationContext.js", "components/HomePage/Products.js", "components/HomePage/FeaturedTours.js", "components/Product/ProductList.js", "components/Product/ProductItem.js", "components/UI/Button.js", "components/UI/Notification.js"],
  "exclude": ["node_modules"]
}
